/**app.wxss**/
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 24rpx;
  box-sizing: border-box;
  background-color: #f8fafc;
}

/* 全局样式 */
page {
  background-color: #f8fafc;
  font-size: 28rpx;
  color: #1f2937;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Arial, sans-serif;
  line-height: 1.5;
}

/* 主题色 */
.primary-color {
  color: #3B82F6;
}

.primary-bg {
  background-color: #3B82F6;
}

/* 按钮样式 */
.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.btn-primary {
  background-color: #3B82F6;
  color: #fff;
}

.btn-primary:active {
  background-color: #2563eb;
}

.btn-default {
  background-color: #fff;
  color: #3B82F6;
  border: 2rpx solid #3B82F6;
}

.btn-danger {
  background-color: #EF4444;
  color: #fff;
}

/* 表单样式 */
.form-group {
  padding: 24rpx 0;
  border-bottom: 2rpx solid #e5e7eb;
}

.form-label {
  font-size: 28rpx;
  color: #4b5563;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  height: 88rpx;
  font-size: 32rpx;
  color: #1f2937;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 0 24rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #1f2937;
}

/* 列表样式 */
.list-item {
  display: flex;
  padding: 32rpx 0;
  border-bottom: 2rpx solid #e5e7eb;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 32rpx;
  color: #1f2937;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.list-item-desc {
  font-size: 28rpx;
  color: #6b7280;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.tag-primary {
  background-color: rgba(59, 130, 246, 0.1);
  color: #3B82F6;
}

.tag-success {
  background-color: rgba(16, 185, 129, 0.1);
  color: #10B981;
}

.tag-warning {
  background-color: rgba(245, 158, 11, 0.1);
  color: #F59E0B;
}

.tag-danger {
  background-color: rgba(239, 68, 68, 0.1);
  color: #EF4444;
}

/* 状态样式 */
.status {
  display: inline-block;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.status-success {
  background-color: #10B981;
  color: #fff;
}

.status-warning {
  background-color: #F59E0B;
  color: #fff;
}

.status-danger {
  background-color: #EF4444;
  color: #fff;
}

.status-info {
  background-color: #3B82F6;
  color: #fff;
}

/* 分割线 */
.divider {
  height: 2rpx;
  background-color: #e5e7eb;
  margin: 24rpx 0;
}

/* 文本对齐 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

/* 文本颜色 */
.text-primary {
  color: #3B82F6;
}

.text-success {
  color: #10B981;
}

.text-warning {
  color: #F59E0B;
}

.text-danger {
  color: #EF4444;
}

.text-gray {
  color: #6b7280;
}

/* 图标样式 */
.icon {
  width: 40rpx;
  height: 40rpx;
}

.icon-text {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 网格布局 */
.grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.grid-3 {
  grid-template-columns: repeat(3, 1fr);
}

.grid-4 {
  grid-template-columns: repeat(4, 1fr);
}

/* 弹性布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 间距 */
.mt-20 {
  margin-top: 20rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mr-20 {
  margin-right: 20rpx;
}

.ml-20 {
  margin-left: 20rpx;
}

.p-20 {
  padding: 20rpx;
}

.pt-20 {
  padding-top: 20rpx;
}

.pb-20 {
  padding-bottom: 20rpx;
}

.pr-20 {
  padding-right: 20rpx;
}

.pl-20 {
  padding-left: 20rpx;
}