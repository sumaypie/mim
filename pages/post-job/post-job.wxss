/* pages/post-job/post-job.wxss */
.container {
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  position: relative;
}

.back-btn {
  position: absolute;
  left: 0;
  top: 50rpx;
  font-size: 28rpx;
  color: #3B82F6;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  text-align: center;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.form-container {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-group {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input {
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
}

.picker-input {
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.picker-placeholder {
  color: #999;
}

.location-input {
  display: flex;
  align-items: center;
}

.location-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.location-btn {
  font-size: 28rpx;
  color: #3B82F6;
  padding: 10rpx 20rpx;
}

.form-footer {
  width: 100%;
  padding: 40rpx 0;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.btn-primary {
  background-color: #3B82F6;
  color: #fff;
}

.tips {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
}