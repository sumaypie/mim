/* pages/register/register.wxss */
.container {
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  position: relative;
}

.back-btn {
  position: absolute;
  left: 0;
  top: 50rpx;
  font-size: 28rpx;
  color: #3B82F6;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  text-align: center;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 角色选择样式 */
.roles-container {
  width: 100%;
  padding: 30rpx 0;
}

.role-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.role-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  background-color: rgba(59, 130, 246, 0.1);
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.role-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.role-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  line-height: 1.5;
}

.tips {
  width: 100%;
  text-align: center;
  padding: 20rpx 0;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}

/* 表单样式 */
.form-container {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-group {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-input {
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
}

.radio-group {
  display: flex;
  padding: 10rpx 0;
}

.radio {
  margin-right: 40rpx;
  font-size: 30rpx;
  color: #333;
}

.role-info {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: rgba(59, 130, 246, 0.05);
  border-radius: 8rpx;
}

.role-info-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.role-info-content {
  display: flex;
  align-items: center;
}

.role-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #3B82F6;
}

.form-footer {
  width: 100%;
  padding: 40rpx 0;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.btn-primary {
  background-color: #3B82F6;
  color: #fff;
}