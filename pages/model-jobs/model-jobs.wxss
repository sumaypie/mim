/* pages/model-jobs/model-jobs.wxss */
.container {
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.search-box {
  flex: 1;
  height: 72rpx;
  background: #F5F5F5;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.post-btn {
  width: 160rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background: #3B82F6;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
}

.filter-bar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.filter-item {
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.filter-item.active {
  color: #3B82F6;
}

.job-list {
  padding: 20rpx 0;
}

.job-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.job-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.job-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.job-salary {
  font-size: 32rpx;
  color: #F59E0B;
  font-weight: bold;
}

.job-info {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.info-item {
  font-size: 26rpx;
  color: #666;
  margin-right: 30rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.info-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

.studio-info {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.studio-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
}

.studio-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.job-status {
  font-size: 26rpx;
  color: #3B82F6;
}

.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}