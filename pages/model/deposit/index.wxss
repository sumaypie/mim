.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 30rpx;
}

/* 押金状态卡片样式 */
.deposit-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.deposit-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.status-label {
  font-size: 28rpx;
  color: #666;
}

.status-value {
  font-size: 28rpx;
  color: #ff4d4f;
}

.status-value.active {
  color: #07c160;
}

.deposit-amount {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.amount-label {
  font-size: 28rpx;
  color: #666;
}

.amount-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.deposit-button {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.deposit-button::after {
  border: none;
}

/* 交易记录列表样式 */
.transaction-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.list-header {
  height: 90rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  border-bottom: 1rpx solid #f0f0f0;
}

.transaction-item {
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-info {
  display: flex;
  flex-direction: column;
}

.transaction-type {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.transaction-time {
  font-size: 24rpx;
  color: #999;
}

.transaction-amount {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.transaction-amount.refund {
  color: #07c160;
}

.empty-list {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}