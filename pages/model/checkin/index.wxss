.container {
  padding: 24rpx;
  background: #f8fafc;
  min-height: 100vh;
}

.map-container {
  width: 100%;
  height: 400rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 24rpx;
}

.map {
  width: 100%;
  height: 100%;
}

.checkin-card {
  background: linear-gradient(135deg, #3B82F6, #2563eb);
  padding: 32rpx;
  border-radius: 16rpx;
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(59, 130, 246, 0.25);
  margin-bottom: 24rpx;
}

.checkin-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.status-value {
  font-size: 32rpx;
  font-weight: bold;
}

.status-value.checked {
  color: #2ecc71;
}

.location-info {
  margin-bottom: 24rpx;
}

.location-label {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
  display: block;
}

.location-value {
  font-size: 28rpx;
  word-break: break-all;
}

.checkin-button {
  background: #fff;
  color: #3B82F6;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 0;
  width: 100%;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.checkin-button.disabled {
  background: rgba(255, 255, 255, 0.6);
  color: rgba(74, 144, 226, 0.6);
}

.checkin-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.list-header {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #eee;
}

.checkin-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.checkin-item:last-child {
  border-bottom: none;
}

.checkin-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.checkin-date {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.checkin-time {
  font-size: 26rpx;
  color: #666;
}

.checkin-location {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.empty-list {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}