/* pages/index/index.wxss */
.container {
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.content {
  flex: 1;
  width: 100%;
  padding: 20rpx 0;
}

.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.card-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 6rpx;
  height: 30rpx;
  background-color: #3B82F6;
  border-radius: 3rpx;
}

.card-content {
  width: 100%;
}

/* 介绍卡片样式 */
.intro-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.intro-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  background-color: rgba(59, 130, 246, 0.1);
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.intro-text {
  flex: 1;
}

.intro-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.intro-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 功能卡片样式 */
.features .card-content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.feature-item {
  width: 48%;
  background-color: rgba(59, 130, 246, 0.05);
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.feature-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #333;
}

/* 底部按钮样式 */
.footer {
  width: 100%;
  padding: 30rpx 0;
}

.btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.btn-primary {
  background-color: #3B82F6;
  color: #fff;
}

.btn-default {
  background-color: #f2f2f2;
  color: #666;
}